<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="style.css">
    <title>BigML</title>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
    <script type='text/javascript'>

      function initSocket() {
          //socket is global
          socket = io.connect();
          alert("connected");
      }

      socket.on('prediction', function (msg) {
        alert(msg);
      });

    </script>
</head>
<body onload="initSocket()">
    <img src="./public/bigml.png" alt="bigml">
    <br>
    <h1>Predicting the topic of conversation</h1>
    <br>
<br>
<br>
<br>

<button onclick="train()">Create new model</button>
<button onclick="predict()">Predict</button>
<script>
    function train() {
      socket.emit('train', "msg");
    }

    function predict(value) {
      socket.emit('predict', value);
    }
</script>
</body>
</html>